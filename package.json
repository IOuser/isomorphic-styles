{
    "name": "isomorphic-styles",
    "version": "0.0.1",
    "description": "Strongly-typed isomorphic styles for React",
    "repository": "https://github.com/IOuser/isomorphic-styles",
    "author": "Ihor Yemets <i.yemets@p1k.co.uk>",
    "license": "MIT",
    "keywords": [
        "webpack",
        "react",
        "SSR",
        "critical",
        "css",
        "performance",
        "optimisation",
        "strongly",
        "typed"
    ],
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "npm run build:ts",
        "build:ts": "tsc",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "prettier": "prettier --write **/*.ts",
        "clean": "rm -rf lib",
        "prepack": "npm run clean && npm run build",
        "precommit": "lint-staged",
        "patch": "yarn version --new-version patch && npm publish",
        "minor": "yarn version --new-version minor && npm publish"
    },
    "peerDependencies": {
        "webpack": "^4.0.0"
    },
    "devDependencies": {
        "@types/loader-utils": "1.1.3",
        "@types/node": "10.5.3",
        "@types/prop-types": "15.5.4",
        "@types/react": "16.4.7",
        "@types/react-dom": "16.0.6",
        "@types/webpack": "4.4.8",
        "prettier": "1.13.7",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.14.0",
        "tslint-eslint-rules": "5.3.1",
        "tslint-microsoft-contrib": "5.1.0",
        "tslint-plugin-prettier": "1.3.0",
        "typescript": "2.9.2",
        "vrsource-tslint-rules": "5.8.2"
    },
    "dependencies": {
        "loader-utils": "1.1.0"
    },
    "resolutions": {
        "@types/react": "^16.4.7",
        "@types/react-dom": "^16.0.6",
        "@types/webpack": "4.4.8"
    },
    "lint-staged": {
        "*.{ts}": [
            "npm run prettier",
            "git add"
        ]
    }
}
